                    <image class="nav-img" src="{{item.img}}" alt=""/>
                    <view class="nav-text">{{item.text}}</view>
                </view>
            </a>
            <view class="{{index==indexa?'line':''}}"></view>
        </view>

    </view>

        <view class="content">
            <view class="wrapper ">
                <view class="title">
