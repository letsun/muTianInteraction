                                </view>
                            </view>
                        </view>
                        <view class="item-con">20181203-1-0003</view>
                        <view class="item-con">白砂糖50KG</view>
                        <view class="item-con">423</view>
                        <view class="item-con">2018-12-03</view>
                    </view>
                </view>
            </view>

        </view>


    <view class="upload-btn" bindtap="addbatch">上传产检报告</view>

</view>
